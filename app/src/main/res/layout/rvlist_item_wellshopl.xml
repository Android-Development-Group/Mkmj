<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/select_rvitem"
                android:padding="10dp"
    >

    <ImageView
        android:id="@+id/iv_shopImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_shopImg"
        android:layout_marginTop="10dp"
        android:text="椰园东南亚风情餐厅"
        android:textSize="17sp"/>

    <LinearLayout
        android:id="@+id/shopmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shopName"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shopArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南大街"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="丨"/>

        <TextView
            android:id="@+id/shopDis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.3KM"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="丨"/>

        <TextView
            android:id="@+id/shoptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自助餐"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopmsg"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人均："/>

        <TextView
            android:id="@+id/shopPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥50"/>

    </LinearLayout>

</RelativeLayout>