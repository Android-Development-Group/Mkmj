<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NewsText" parent="TextAppearance.AppCompat.Medium"/>

    <!--编辑字体样式-->
    <style name="NewsText.EditText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColorHint">#C2C2C2</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!--navigation_bar-->
    <style name="style_navigation_bar">
        <item name="android:id">@id/navigation_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_bar_height</item>
        <item name="nav_has_divider">false</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 蓝色按钮，带圆角 -->
    <style name="BlueWithCorner">
        <item name="android:background">@drawable/button_bluecorner_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 性别选择样式 -->
    <style name="CheckboxTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/rb_selector</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:paddingLeft">5dp</item>
    </style>


</resources>
